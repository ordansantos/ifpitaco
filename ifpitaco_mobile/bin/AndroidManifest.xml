<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifpb.ifpitaco_mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <!-- Permissão para o Broadcast -->

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/ifpitaco"
        android:theme="@style/AppTheme" >

        <!-- Definindo o Broadcast e a classe que é disparada pelo receiver -->

        <receiver android:name="br.edu.ifpb.IniciarAppBroadcast" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="br.edu.ifpb.SplashScreen"
            android:label="@string/ifpitaco" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.edu.ifpb.FuncoesListActivity"
            android:label="@string/ifpitaco" >
        </activity>
        <activity
            android:name="br.edu.ifpb.ProporActivity"
            android:label="@string/title_activity_propor" >
        </activity>
        <activity
            android:name="br.edu.ifpb.FiscalizarActivity"
            android:label="@string/title_activity_fiscalizar" >
        </activity>
        <activity
            android:name="br.edu.ifpb.AvaliarActivity"
            android:label="@string/title_activity_avaliar" >
        </activity>
        <activity
            android:name="br.edu.ifpb.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity 
            android:name="br.edu.ifpb.AvaliacoesActivity"
            android:label="@string/title_activity_avaliacoes">
        </activity>
        <activity 
            android:name="br.edu.ifpb.FiscalizacoesActivity"
            android:label="@string/title_activity_fiscalizacoes">
        </activity>
        <activity 
            android:name="br.edu.ifpb.PropostasActivity"
            android:label="@string/title_activity_propostas">
        </activity>
    </application>

</manifest>
